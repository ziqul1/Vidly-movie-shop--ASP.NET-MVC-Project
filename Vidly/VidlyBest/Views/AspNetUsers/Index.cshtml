@model IEnumerable<VidlyBest.Models.AspNetUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1><b>Users</b></h1>
</div>

@using (Html.BeginForm("Search", "AspNetUsers", FormMethod.Get))
{
    <h4>Here you can search for a user</h4>

    @Html.TextBox("searching")

    <a>&nbsp;</a>

    <button type="submit" class="btn btn-default btn-sm">Search</button>
}

<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Name</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.ActionLink(user.Email, "Edit", "AspNetUsers", new { id = user.Id }, null)</td>
                <td>@user.Name</td>
                <td>@Html.ActionLink("Delete", "Delete", "AspNetUsers", new { id = user.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>
